<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gabo.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/fondo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:weightSum="1"
            android:id="@+id/linearLayout">

            <Button
                android:layout_margin="1px"
                android:layout_width="203dp"
                android:layout_height="match_parent"
                android:text="1x"
                android:background="@color/botonUno"
                android:textColor="@color/textoBtn"
                android:textSize="60px"
                android:id="@+id/button"
                android:onClick="onClick"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <Button
                    android:layout_margin="1px"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="2x"
                    android:background="@color/botonDos"
                    android:textColor="@color/textoBtn"
                    android:textSize="60px"
                    android:id="@+id/button2"
                    android:onClick="onClick"/>

                <Button
                    android:layout_margin="1px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3x"
                    android:background="@color/botonTres"
                    android:textColor="@color/textoBtn"
                    android:textSize="60px"
                    android:id="@+id/button3"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:onClick="onClick"/>
                    android:layout_toEndOf="@+id/linearLayout" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:weightSum="1"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.32">

                <Button
                    android:layout_margin="1px"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="4x"
                    android:background="@color/botonCuatro"
                    android:textColor="@color/textoBtn"
                    android:textSize="60px"
                    android:onClick="onClick"
                    android:id="@+id/button4" />

                <Button
                    android:layout_margin="1px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5x"
                    android:background="@color/botonCinco"
                    android:textColor="@color/textoBtn"
                    android:textSize="60px"
                    android:id="@+id/button5"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_toEndOf="@+id/linearLayout"
                    android:onClick="onClick"/>/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="203dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.69">

                <Button
                    android:layout_margin="1px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6x"
                    android:background="@color/botonSeis"
                    android:textColor="@color/textoBtn"
                    android:textSize="60px"
                    android:id="@+id/button6"
                    android:layout_gravity="left|top"
                    android:onClick="onClick"/>/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:id="@+id/linearLayout3">

            <Button
                android:layout_margin="1px"
                android:layout_width="232dp"
                android:layout_height="172dp"
                android:text="7x"
                android:background="@color/botonSiete"
                android:textColor="@color/textoBtn"
                android:textSize="60px"
                android:id="@+id/button7"
                android:layout_weight="1.07"
                android:onClick="onClick"/>/>

            <Button
                android:layout_margin="1px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8x"
                android:background="@color/botonOcho"
                android:textColor="@color/textoBtn"
                android:textSize="60px"
                android:id="@+id/button8"
                android:onClick="onClick"/>/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:id="@+id/linearLayout4">

            <Button
                android:layout_margin="1px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9x"
                android:background="@color/botonNueve"
                android:textColor="@color/textoBtn"
                android:textSize="60px"
                android:id="@+id/button9"
                android:onClick="onClick"/>/>

            <Button
                android:layout_margin="1px"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:text="10x"
                android:background="@color/botonDiez"
                android:textColor="@color/textoBtn"
                android:textSize="60px"
                android:id="@+id/button10"
                android:onClick="onClick"/>/>
        </LinearLayout>


    </RelativeLayout>


    </ScrollView>

</RelativeLayout>
